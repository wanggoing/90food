page{
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.scroll-view {
  width: 100%;
  height: 100%;
}

.order-info{
  padding-top: 25rpx;
  background: #fff;
  height: auto;
  overflow: hidden; 
}

.item-a{
  padding-left: 31.25rpx;
  height: 29rpx;
  line-height: 29rpx;
  margin-top: 12.5rpx;
  margin-bottom: 20.5rpx;
  font-size: 30rpx;
  color: #666;
}

.item-b{
  padding-left: 31.25rpx;
  height: 29rpx;
  line-height: 29rpx;
  margin-top: 12.5rpx;
  margin-bottom: 20.5rpx;
  font-size: 30rpx;
  color: #666;
}

.item-c{
  position: fixed;
  padding-left: 15rpx;
  border-top: 1px solid #f4f4f4; 
  height: 103rpx;
  background: white;
  line-height: 103rpx;
  bottom: 0rpx;
  width: 100%;
}

.item-c .l{
  float: left;
}

.item-c .r{
  height: 103rpx;
  float: right;
  display: flex;
  align-items: center;
  padding-right: 12rpx;
}

.item-c .r .btn{
  float: right;
}

.item-c .r .btn_logistics {
  float: right;
}

.item-c .cost{
  color: #b4282d;
}

.item-c .btn{
  line-height: 66rpx;
  text-align: center;
  margin: 0 15rpx;
  padding: 0 20rpx;
  height: 66rpx;
  border-radius: 5rpx;
}

.item-c .btn_logistics {
  line-height: 66rpx;
  text-align: center;
  margin: 0 15rpx;
  padding: 0 20rpx;
  height: 66rpx;
  border-radius: 5rpx;
}

.item-c .btn.active{
  background: #CD5C5C;
  color: #fff;
  border-radius: 5px
}

.order-goods{
  margin-top: 20rpx;
  background: #fff;
}

.order-goods .h{
  height: 93.75rpx;
  line-height: 93.75rpx;
  margin-left: 31.25rpx;
  border-bottom: 1px solid #f4f4f4;
  padding-right: 31.25rpx;
}

.order-goods .h .label{
  float: left;
  font-size: 30rpx;
  color: #333;
}

.order-goods .h .status{
  float: right;
  font-size: 30rpx;
  color: #b4282d;
}

.order-goods .item{
  display: flex;
  align-items: center;
  height: 192rpx;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  border-bottom: 1px solid #f4f4f4;
}

.order-goods .item:last-child{
  border-bottom: none;
}

.order-goods .item .img{
  height: 145.83rpx;
  width: 145.83rpx;
  background: #f4f4f4;
}

.order-goods .item .img image{
  height: 145.83rpx;
  width: 145.83rpx;
}

.order-goods .item .info{
  flex: 1;
  height: 145.83rpx;
  margin-left: 20rpx;
}

.order-goods .item .t{
  margin-top: 8rpx;
  height: 33rpx;
  line-height: 33rpx;
  margin-bottom: 10.5rpx;
}

.order-goods .item .t .name{
  display: block;
  float: left;
  height: 33rpx;
  line-height: 33rpx;
  color: #333;
  font-size: 30rpx;
}

.order-goods .item .t .number{
  display: block;
  float: right;
  height: 33rpx;
  text-align: right;
  line-height: 33rpx;
  color: #333;
  font-size: 30rpx;
}

.order-goods .item .attr{
  display: -webkit-box;
  text-align: left;
  height: 70rpx;
  line-height: 35rpx;
  color: #666;
  font-size: 27rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}

.order-goods .item .price{
  height: 30rpx;
  line-height: 33rpx;
  color: #666;
  font-size: 25rpx;
}

.order-bottom{
  margin-top: 20rpx;
  padding-left: 31.25rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  margin-bottom: 103rpx;
}

.order-bottom .address{
  height: 128rpx;
  padding-top: 25rpx;
  border-bottom: 1px solid #f4f4f4;
}

.order-bottom .address .t{
  height: 35rpx;
  line-height: 35rpx;
  margin-bottom: 7.5rpx;
}

.order-bottom .address .empty {
  color: #b4282d;
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:center;
  align-items: center;
  width: 100%;
  height: 80%;
  font-size: 28rpx;
}

.order-bottom .address .name{
  display: inline-block;
  height: 35rpx;
  width: 140rpx;
  line-height: 35rpx;
  font-size: 25rpx;
}

.order-bottom .address .mobile{
  display: inline-block;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 25rpx;
}

.order-bottom .address .b{
  height: 35rpx;
  line-height: 50rpx;
  font-size: 25rpx;
}

.order-bottom .total{
  height: 90rpx;
  padding-top: 20rpx;
}

.order-bottom .total .t{
  height: 25rpx;
  line-height: 25rpx;
  margin-bottom: 15rpx;
  display: flex;
}

.order-bottom .total .label{
  width: 140rpx;
  display: inline-block;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 25rpx;
}

.order-bottom .total .txt{
  flex: 1;
  display: inline-block;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 25rpx;
}

.order-bottom .pay-fee{
  height: 81rpx;
  line-height: 81rpx;
}

.order-bottom .pay-fee .label{
  display: inline-block;
  width: 140rpx;
  color: #b4282d;
}

.order-bottom .pay-fee .txt{
  display: inline-block;
  width: 140rpx;
  color: #b4282d;
}