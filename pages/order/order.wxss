page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.status-box {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.status-box .status-label {
  height: 100%;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  box-sizing: border-box;
  position: relative;
}

.status-box .status-label.active {
  color: #e64340;
  width: 100%;
  text-align: center;
  border-bottom: 6rpx solid #e64340;
}

.status-box .status-label .red-dot {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  left: 116rpx;
  top: 23rpx;
  background-color: #f43530;
  border-radius: 50%;
}

.no-order {
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 88rpx;
  left: 0;
  right: 0;
  text-align: center;
  padding-top: 203rpx;
  background-color: #f2f2f2;
}

.no-order {
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 200rpx;
  left: 0;
  right: 0;
  text-align: center;
  padding-top: 203rpx;
  background-color: #f2f2f2;
}

.no-order-img {
  width: 81rpx;
  height: 96rpx;
  margin-bottom: 31rpx;
}

.no-order .text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.orders {
  position: absolute;
  top: 88rpx;
  left: 0;
  text-align: center;
  padding-top: 5rpx;
  height: 100%;
  width: 100%;
}

.order{
  margin-top: 20rpx;
  background: #fff;
}

 .order .h{
  height: 83.3rpx;
  line-height: 83.3rpx;
  margin-left: 15.25rpx;
  padding-right: 15.25rpx;
  border-bottom: 1px solid #f4f4f4;
  font-size: 30rpx;
  color: #333;
} 

 .order .h .l{
  float: left;
  font-size: 22rpx;
} 

 .order .h .r{
  float: right;
  color: #b4282d;
  font-size: 22rpx;
} 

 .order .goods{
  display: flex;
  align-items: center;
  height: 199rpx;
  margin-left: 31.25rpx;
} 

.order .goods .img{
  height:145.83rpx;
  width:145.83rpx;
  background: #f4f4f4;
}

.order .goods .img image{
  height:145.83rpx;
  width:145.83rpx;
}

.order .goods .info{
  height: 145.83rpx;
  flex: 1;
  padding-left: 20rpx;
} 

.order .goods .name{
  text-align: left;
  margin-top: 0rpx;
  display: block;
  height: 44rpx;
  line-height: 44rpx;
  color: #333;
  font-size: 30rpx;
} 

.order .goods .des{
  display: -webkit-box;
  text-align: left;
  height: 70rpx; 
  line-height: 37rpx;
  color: #666;
  font-size: 27rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
} 

.order .goods .price {
  position: relative;
  height: 15rpx;
  line-height: 15rpx;
  color: #666;
  font-size: 25rpx;
  top: 10%;
  margin-right: 100rpx;
} 

 .order .goods .number{
  position: relative;
  text-align: left; 
  height: 15rpx;
  line-height: 15rpx;
  color: #666;
  font-size: 25rpx;
  bottom: 20%;
  right: 60%;
}

 .order .goods .status{
  width:105rpx;
  color: #b4282d;
  font-size: 25rpx;
} 

 .order .b{
  height: 103rpx;
  line-height: 103rpx;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  border-top: 1px solid #f4f4f4;
  font-size: 30rpx;
  color: #333;
} 

.order .b .l{
  float: left;
}

.order .b .r{
  float: right;
}

.order .b .btn{
  margin-top: 19rpx;
  height: 64.5rpx;
  line-height: 64.5rpx;
  text-align: center;
  padding: 0 20rpx;
  border-radius: 5px;
  font-size: 28rpx;
  color: #fff;
  background: #CD5C5C;
}

 .order .b .btn_logistics{
  margin-top: 19rpx;
  height: 64.5rpx;
  line-height: 64.5rpx;
  text-align: center;
  padding: 0 20rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
  color: #333;
  background: #f4f4f4;
}   